@{
    ViewData["Title"] = "Renderizar lista";
}
@model List<CodeProject.Models.Empleado>

<div class="row">
        
    <div class="col-sm-8 offset-sm-2">
           
        <h2>Lista empleados</h2>
        <a asp-controller="Empleado" asp-action="Nuevo" class="btn btn-success mb-3">Agregar nuevo registro</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre completo</th>
                    <th>Correo</th>
                    <th>Fecha contrato</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdEmpleado</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.Correo</td>
                        <td>@item.FechaContrato.ToString("dd/MM/yy")</td>
                        <td>@(@item.IsActive ? "Si" : "No")</td>

                        <td class="flex">
                            <a
                            asp-controller="Empleado"
                            asp-action="Editar"
                            asp-route-id="@item.IdEmpleado"
                            class="btn btn-warning"
                            >
                                Editar
                            </a>
                            <form asp-controller="Empleado" asp-action="Eliminar" asp-route-id="@item.IdEmpleado" method="post">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>